{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "jsx": "react",
    "module": "ES2015",
    "moduleResolution": "node",
    "outDir": "dist",
    "pretty": true,
    "resolveJsonModule": true,
    "strict": true,
    "lib": ["dom", "ES2015", "ES2017"]
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}
